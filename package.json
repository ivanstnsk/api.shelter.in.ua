{
  "name": "api-shelter-in-ua",
  "version": "1.0.0",
  "description": "Shelter in UA API",
  "main": "build/index.js",
  "scripts": {
    "start": "node build/index.js",
    "build": "tsc -p . && ncp src/schema build/schema",
    "start:dev": "concurrently \"yarn build:dev\" \"yarn generate-types --watch\"",
    "build:dev": "nodemon 'src/index.ts' --exec 'ts-node'",
    "generate-types": "graphql-codegen --config codegen.yml"
  },
  "keywords": [],
  "author": "ivanstnsk",
  "license": "MIT",
  "dependencies": {
    "apollo-datasource": "^3.3.0",
    "apollo-server-core": "^3.6.1",
    "apollo-server-express": "^3.6.1",
    "compression": "^1.7.4",
    "concurrently": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^11.0.0",
    "express": "^4.17.2",
    "graphql": "^16.2.0",
    "http": "^0.0.1-security",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^2.0.5",
    "lowdb": "^3.0.0",
    "ncp": "^2.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.3.1",
    "@graphql-codegen/introspection": "2.1.1",
    "@graphql-codegen/typescript": "2.4.2",
    "@graphql-codegen/typescript-resolvers": "2.4.3",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/graphql-depth-limit": "^1.1.3",
    "@types/node": "^17.0.8",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import": "^1.0.2",
    "graphql-import-node": "^0.0.4",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typescript": "^4.5.4"
  }
}
